        android:text="请求权限"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_copy"
        android:layout_width="wrap_content"
        android:text="复制文件"
        android:layout_height="wrap_content" />
    <Button
